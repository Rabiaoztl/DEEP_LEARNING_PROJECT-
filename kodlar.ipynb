# 13. Test Ã–rnekleri ile DeÄŸerlendirme (DoÄŸru/YanlÄ±ÅŸ Tahminler)
# =====================
def evaluate_with_examples(model, test_loader, class_names, num_examples=4):
    device = torch.device("cuda" if torch.cuda.is_available() else "cpu")
    model.to(device)
    model.eval()

    y_true, y_pred = [], []
    images_list = []
    with torch.no_grad():
        for images, labels in test_loader:
            images, labels = images.to(device), labels.to(device)
            outputs = model(images)
            preds = outputs.argmax(1)

            y_true.extend(labels.cpu().numpy())
            y_pred.extend(preds.cpu().numpy())
            images_list.extend(images.cpu())

    acc = np.mean(np.array(y_true) == np.array(y_pred))
    print(f"\nTest DoÄŸruluÄŸu: {acc:.4f}")

    cm = confusion_matrix(y_true, y_pred)
    plt.figure(figsize=(8,6))
    sns.heatmap(cm, annot=True, fmt="d", cmap="Blues",
                xticklabels=class_names, yticklabels=class_names)
    plt.title("KarmaÅŸÄ±klÄ±k Matrisi")
    plt.ylabel("GerÃ§ek Etiket")
    plt.xlabel("Tahmin Edilen Etiket")
    plt.show()

    y_true = np.array(y_true)
    y_pred = np.array(y_pred)
    correct_indices = np.where(y_true == y_pred)[0]
    incorrect_indices = np.where(y_true != y_pred)[0]

    plt.figure(figsize=(12, 6))
    for i, idx in enumerate(correct_indices[:num_examples]):
        img = images_list[idx].numpy().transpose((1,2,0))
        img = img * [0.229, 0.224, 0.225] + [0.485, 0.456, 0.406]
        img = img.clip(0,1)
        plt.subplot(2, num_examples, i+1)
        plt.imshow(img)
        plt.title(f"âœ“ Tahmin: {class_names[y_pred[idx]]}\nGerÃ§ek: {class_names[y_true[idx]]}")
        plt.axis("off")

    for i, idx in enumerate(incorrect_indices[:num_examples]):
        img = images_list[idx].numpy().transpose((1,2,0))
        img = img * [0.229, 0.224, 0.225] + [0.485, 0.456, 0.406]
        img = img.clip(0,1)
        plt.subplot(2, num_examples, num_examples+i+1)
        plt.imshow(img)
        plt.title(f"âœ— Tahmin: {class_names[y_pred[idx]]}\nGerÃ§ek: {class_names[y_true[idx]]}")
        plt.axis("off")

    plt.tight_layout()
    plt.show()

